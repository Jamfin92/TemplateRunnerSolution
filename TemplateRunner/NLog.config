<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<!-- Define the target -->
	<targets>
		<target xsi:type="File" name="fileLogger"
				fileName="./Logs/${date:format=yyyy-MM-dd}/${logger}.log"
				layout="${longdate} ${uppercase:${level}} ${message} ${exception:format=ToString}${newline}----------------------------------------------------------------------------------------------------"/>
	</targets>

	<!-- Rules for mapping loggers to targets -->
	<rules>
		<logger name="*" minlevel="Debug" writeTo="fileLogger"/>f
	</rules>

</nlog>